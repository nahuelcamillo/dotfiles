#
# Reload sxhkdrc
#

super + shift + s
    pkill -usr1 -x sxhkd; notify-send 'sxhkd' 'Reloaded config'


#
# Screenshots and Videos
#

super + shift + 3
    flameshot full

super + shift + 4
    flameshot gui

super + shift + 5
    peek

#
# Open/Init applications
#

super + shift + a; f
		firefox

super + shift + a; d
		firefox-developer-edition

super + shift + a; g
		google-chrome-stable

super + shift + a; v
		code

super + shift + a; a
		alacritty

super + shift + a; b
		~/.local/share/JetBrains/Toolbox/apps/datagrip-2/bin/datagrip.sh

super + shift + a; m
		mailspring

super + shift + a; n
		notion-app

super + shift + a; s
		spotify

super + shift + a; t
		telegram-desktop

super + shift + a; w
		whatsapp-nativefier

